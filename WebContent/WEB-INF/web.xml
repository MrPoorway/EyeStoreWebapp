	</servlet>
	<servlet-mapping>
		<servlet-name>UpdateGlassesServlet</servlet-name>
		<url-pattern>/updateglasses</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>CustomerLoginServlet</servlet-name>
		<servlet-class>servlets.CustomerLoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CustomerLoginServlet</servlet-name>
		<url-pattern>/userlog</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>AboutServlet</servlet-name>
		<servlet-class>servlets.AboutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AboutServlet</servlet-name>
		<url-pattern>/about</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>servlets.LogoutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>CustomerRegisterServlet</servlet-name>
		<servlet-class>servlets.CustomerRegisterServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CustomerRegisterServlet</servlet-name>
		<url-pattern>/userreg</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>RemoveGlassesServlet</servlet-name>
		<servlet-class>servlets.RemoveGlassesServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>RemoveGlassesServlet</servlet-name>
		<url-pattern>/removeglasses</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>AddGlassesServlet</servlet-name>
		<servlet-class>servlets.AddGlassesServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddGlassesServlet</servlet-name>
		<url-pattern>/addglasses</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ViewGlassesServlet</servlet-name>
		<servlet-class>servlets.ViewGlassesServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ViewGlassesServlet</servlet-name>
		<url-pattern>/viewglasses</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>CartServlet</servlet-name>
		<servlet-class>servlets.CartServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CartServlet</servlet-name>
		<url-pattern>/cart</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>BuyGlassessServlet</servlet-name>
		<servlet-class>servlets.BuyGlassessServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BuyGlassessServlet</servlet-name>
		<url-pattern>/buyglasses</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ReceiptServlet</servlet-name>
		<servlet-class>servlets.ReceiptServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ReceiptServlet</servlet-name>
		<url-pattern>/buys</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>CheckoutServlet</servlet-name>
		<servlet-class>servlets.CheckoutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CheckoutServlet</servlet-name>
		<url-pattern>/checkout</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ProcessPaymentServlet</servlet-name>
		<servlet-class>servlets.ProcessPaymentServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ProcessPaymentServlet</servlet-name>
		<url-pattern>/pay</url-pattern>
	</servlet-mapping>
	
	  <servlet>
  	<servlet-name>JerseyRESTService</servlet-name>
  	<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
  	<init-param>
  		<param-name>jersey.config.server.provider.packages</param-name>
  		<param-value>com.group2.resful_api</param-value>
  	</init-param>
  	<load-on-startup>1</load-on-startup>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>JerseyRESTService</servlet-name>
  	<url-pattern>/rest/*</url-pattern>
  </servlet-mapping>

	<!-- Error Handlers -->
	<servlet>
		<servlet-name>ErrorHandlerServlet</servlet-name>
		<servlet-class>servlets.ErrorHandlerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ErrorHandlerServlet</servlet-name>
		<url-pattern>/error</url-pattern>
	</servlet-mapping>
	<!-- error-code related error pages -->
	<error-page>
		<error-code>404</error-code>
		<location>/error</location>
	</error-page>
	<error-page>
		<error-code>405</error-code>
		<location>/error</location>
	</error-page>
	
	<!-- exception-type related error pages -->
	<error-page>
		<exception-type>
			javax.servlet.ServletException
		</exception-type>
		<location>/error</location>
	</error-page>
	<!-- exception-type related all errors -->
	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/error</location>
	</error-page>

	<!-- welcome file -->
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>